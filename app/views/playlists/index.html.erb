<% provide(:title, "Sync Room | Videos") %>
    <h1>Popular Videos</h1>
    <p>Here you can find popular videos that you are interested!</p>
    
    <div class= "btn-group-justified">
        <%= link_to "Recent", recent_playlists_path, class: "btn btn-primary btn-lg btn-block btn-color" %>
        <%= link_to "Most Popular", mostPlayed_playlists_path, class: "btn btn-primary btn-lg btn-block btn-color" %>
    </div>
    
    <div class="container-fluid">
        <% @playlists.each_slice(3) do |array_of_3_items|%>
        <div class="row">
            <% array_of_3_items.each do |video|%>
            <div class="col-md-4">
                <div class="panel panel-default ">
                    <div class="panel-body">
                        <h4 class="panel-title">
                            <p><b><%= video.title %></b></p>
                            <p>Video link: <%= video.link %></p>
                            <p>Played: <%= video.count %></p>
                        </h4>
                        <img class="img-responsive" src=<%=get_thumbnail(video.link)%> alt="" />
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
<% end %>